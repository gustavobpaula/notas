<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notas.Paginas.EditarNota">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="Titulo" Placeholder="Titulo"  FontSize="24"  HorizontalOptions="FillAndExpand" />
                <Button Text="&#xf0c7;" Clicked="SalvarAction" WidthRequest="50" FontSize="24" Padding="0" Margin="0" BackgroundColor="Transparent">
                    <Button.FontFamily>
                        <OnPlatform x:TypeArguments="x:String" Android="fa-solid-900.ttf#Font Awesome 5 Free Regular" iOS="Font Awesome 5 Free"/>
                    </Button.FontFamily>
                </Button>
            </StackLayout>

            <Editor x:Name="Descricao" Placeholder="Nota" VerticalOptions="FillAndExpand" FontSize="20" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>