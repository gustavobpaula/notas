<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notas.Paginas.DetalharNota">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="{Binding Titulo}" FontSize="24" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" Margin="0, 15, 0, 15"/>
            <BoxView BackgroundColor="Silver" HeightRequest="1" HorizontalOptions="FillAndExpand"/>
            <Label Text="{Binding Descricao}" FontSize="20"  Margin="0, 10, 0, 0" />            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>